.file-explorer
  .file-explorer_path Path:
    .path-component(ng-click='popToDirectory(null)') root
    span(ng-repeat='component in files track by $index')
      .path-separator / 
      .path-component(ng-click='popToDirectory(component)') {{ component.name }} 
  div(fs-file-view, fs-files='getCurrentFileList().files', fs-click='fileClicked($file)')